@model CompanyModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Add New Company" : $"{Model.Name}";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Id == 0 ? "Add New Company" : "Edit Company")
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row ">
            <div class="col-md-12 row">
                <form method="post" class="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" hidden />
                    <div class="row ">
                        <div class="form-floating mb-3 col-md-12">
                            <input type="text" class="form-control" placeholder="name@example.com" aria-label="Name" asp-for="@Model.Name">
                            <label asp-for="@Model.Name" class="ms-2 text-muted">Name</label>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="name@example.com" />
                            <label asp-for="@Model.PhoneNumber" class="ms-2 text-muted">Phone Number</label>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="@Model.Street" class="form-control" placeholder="name@example.com" />
                            <label asp-for="@Model.Street" class="ms-2 text-muted">Street Address</label>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="@Model.City" class="form-control" placeholder="name@example.com" />
                            <label asp-for="@Model.City" class="ms-2 text-muted">City</label>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="@Model.State" class="form-control" placeholder="name@example.com" />
                            <label asp-for="@Model.State" class="ms-2 text-muted">State</label>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="@Model.Postal" class="form-control" placeholder="name@example.com" />
                            <label asp-for="@Model.Postal" class="ms-2 text-muted">Postal Code</label>
                        </div>
                    </div>

                    <button class="btn btn-outline-secondary px-3 px-md-5" type="submit">
                        @(Model.Id == 0 ? "ADD" : "UPDATE")
                    </button>
                    <a class="btn btn-secondary" type="button" asp-area="Admin" asp-controller="Company" asp-action="Index">Back To List</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
